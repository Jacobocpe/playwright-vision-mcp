{
  "name": "simple-playwright-mcp",
  "version": "1.1.0",
  "description": "n8n MCP server with Playwright browser automation capabilities",
  "main": "dist/http-server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "simple-playwright-mcp": "dist/stdio-server.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/http-server.js",
    "start:stdio": "node dist/stdio-server.js",
    "dev": "tsx src/http-server.ts",
    "dev:stdio": "tsx src/stdio-server.ts",
    "install-browsers": "playwright install",
    "prepare": "npm run build",
    "postinstall": "playwright install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.1",
    "playwright": "^1.49.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "n8n",
    "mcp",
    "playwright",
    "browser-automation",
    "web-scraping"
  ],
  "author": "n8n MCP Server",
  "license": "MIT"
}
